<div class="row">
    <h3 class="mx-auto">
        <%= t('activerecord.models.specialization.one') %>
        <small class="text-muted"><%= action %></small>
    </h3>    
</div>

<% if @specialization.errors.any? %>
    <div class="row">
        <div class="col">
            <div class="alert alert-danger" role="alert">            
                <ul class="list-group">
                    <% @specialization.errors.full_messages.each do |message| %>
                    <li class="list-group-item">
                        <strong><%= message %></strong>
                    </li>
                    <% end %>
                </ul>
            </div>
        </div>
    </div>
<% end %>

<%= form_for([:backoffice, @specialization]) do |f| %>
    <div class="form-group row">
        <%= f.label :description, :class => 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
            <%= f.text_field :description, :class => 'form-control' %>    
        </div>    
    </div>
    <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
            <%= f.submit t('buttons.save'), :class => "btn btn-primary" %>
        </div>
    </div>
<% end %>