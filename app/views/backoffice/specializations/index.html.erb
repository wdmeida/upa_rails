<div class="row">
    <h3 class="mx-auto">
        <%= @specializations.model_name.human(count: @specializations.length) %>
        <small class="text-muted"><%= t('labels.listed') %></small>
    </h3>    
</div>

<%= link_to new_backoffice_specialization_path, :class => "btn btn-outline-success btn-lg btn-block" do %>
    <%= t('buttons.new') %>
<% end %>

<div class="row">
    <div class="col">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th><%= @specializations.model.human_attribute_name("description") %></th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% @specializations.each do |specialization| %>
                    <tr>
                        <td scope="row"><%= specialization.id %></td>
                        <td><%= specialization.description %></td>
                        <td>
                            
                            <%= link_to edit_backoffice_specialization_path(specialization), :class => "btn btn-outline-primary" do %>
                                <%= t('buttons.edit') %>
                            <% end %>

                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
        <%= paginate @specializations, theme: 'twitter-bootstrap-4' %>
    </div>
</div>



