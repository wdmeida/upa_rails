<div class="form-signin">
  <h4 class="form-signin-heading">
    <%= t('labels.login_upa') %>
  </h4>

  <hr class="my-4">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <%= f.label :email, class: 'sr-only' %>
    <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email' %>

    <%= f.label :password, class: 'sr-only' %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Senha' %>
    
    <% if devise_mapping.rememberable? -%>
      <div class="form-check">
        <%= f.check_box :remember_me, class: 'form-check-input', :style => "margin-left: 0;" %>            
        <%= f.label t('labels.remember_me'), class: 'form-check-label' %>
      </div>
    <% end -%>

    <%= f.submit t('buttons.submit'), class: 'btn btn-success btn-block' %>
  <% end %>
</div>