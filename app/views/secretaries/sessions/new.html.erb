<%= form_for(resource, as: resource_name, url: session_path(resource_name), 
              html: { class: 'form-signin' }) do |f| %>
  
  <h4 class="form-signin-heading">
    <%= t('app.saudation_screen_login') %>
  </h4>

    <%= f.label :email, class: 'sr-only' %>
    <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email' %>

  <%= f.label :password, class: 'sr-only' %><br />
  <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Senha' %>

  <% if devise_mapping.rememberable? -%>
    <div class="checkbox">
      <%= f.label t('labels.remember_me') %>        
      <%= f.check_box :remember_me %>            
    </div>
  <% end -%>
  <%= f.submit t('buttons.submit'), class: 'btn btn-lg btn-success btn-block' %>
<% end %>