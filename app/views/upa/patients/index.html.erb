<div class="row">
  <h3 class="mx-auto">
      <%= @patients.model_name.human(count: @patients.length) %>
      <small class="text-muted"><%= t('labels.listed') %></small>
  </h3>    
</div>

<%= render partial: 'upa/shared/search',
           locals: { 
            path: upa_patients_path, 
            field_name: :name_cont, 
            type_button: 'outline-primary' 
          } %>

<div class="row">
  <div class="col-lg-12" style="margin-top: 20px; margin-bottom: 20px;">
    <%= link_to new_upa_patient_path, class: 'btn btn-primary btn-block', role: 'button' do %>
      <%= t('buttons.new') %>
    <% end %>
  </div>
</div>

<div id="list-patients">
  <%= render partial: 'upa/patients/shared/patients' %>
</div>