<div class="row">
  <h3 class="mx-auto">
    <%= t('activerecord.models.appointment.one') %>
    <small class="text-muted"><%= action %></small>
  </h3>
</div>

<div class="row">
  <h4 class="mx-auto">
    <%= t('labels.patient') %>: 
    <small class="text-muted"><%= @patient.name %></small>
  </h4>
</div>

<%= form_for([:upa, @appointment]) do |f| %>
  <div class="row">
    <div class="form-group col-md-4 <%= has_errors?(@appointment, :datetime_appointment, 'has-danger') %>">
      <%= f.label :datetime_appointment, :class => 'form-control-label' %>
      <%= f.text_field :datetime_appointment, :class => 'form-control datetimepicker_appointment',
        :value => (l(@appointment.datetime_appointment) unless @appointment.datetime_appointment.blank?) %>
      <% if !@appointment.errors.messages[:datetime_appointment].empty? %>
        <div class="form-control-feedback"><%= @appointment.errors.full_messages_form(:datetime_appointment)[0] %></div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="form-check col-md-4">
      <%= f.label :appointment_finished, :class => 'form-check-label' do %>
        <%= f.check_box :appointment_finished, { :class => 'form-check-input', :value => @appointment.appointment_finished? } %>
        <%= t('labels.appointment_finished') %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-12 <%= has_errors?(@appointment, :diagnostic, 'has-danger') %>">
      <%= f.label :diagnostic, :class => 'form-control-label' %>
      <%= f.text_area :diagnostic, :class => 'form-control', :rows => 4,
        :placeholder => 'Mais informações...' %>
      <% if !@appointment.errors.messages[:diagnostic].empty? %>
        <div class="form-control-feedback"><%= @appointment.errors.full_messages_form(:diagnostic)[0] %></div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-12">
      <%= f.submit t('buttons.save'), :class => 'btn btn-primary' %>
      <%= link_to upa_appointments_path, :class => 'btn btn-secundary' do %>
        <%= t('buttons.back') %>
      <% end %>
    </div>
  </div>
<% end %>